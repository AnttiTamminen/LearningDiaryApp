@model LearningDiaryApp.Models.Note

@{
    ViewData["Title"] = "Create";
    var taId = ViewData["TaskId"] as int?;
}

<div class="text-center">
    <h1>Create Task for Task: @taId</h1>

    <hr />
    <div class="row">
        <div class="col">
            <form asp-action="CreateNote">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="TaskId" class ="form-control" value="@taId" style="display: none;"/>
                </div>
                <div class="form-group">
                    <label asp-for="Note1" class="control-label">Note text</label>
                    <input asp-for="Note1" class="form-control" />
                    <span asp-validation-for="Note1" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a asp-controller="Home" asp-action="Index">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
